<aura:component description="cardModalWindow">
    <aura:attribute name="isOpen" type="Boolean" default="false"/>
    <aura:attribute name="card" type="Card__c"/>

    <aura:registerEvent name="deleteCard" type="c:deleteCardEvent"/>


    <lightning:button label="Change data" variant="brand" iconName="action:info" onclick="{!c.openWindow}"/>
    <aura:if isTrue="{!v.isOpen}">
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open slds-color__background_gray-4">
            <div class="slds-modal__container ">
                <c:recordFormTest card="{!v.card}"/>
                <lightning:button variant="neutral" label="Close" title="Close" onclick="{!c.closeWindow}"/>
            </div>
        </section>
    </aura:if>
</aura:component>